<h1>Edit Book</h1>
<p> <em> Enter the required data: </em> </p>

<% if @book.errors.any? %>
  <div>
    Please correct the following problems:
    <ul>
      <% @book.errors.full_messages.each do |m| %>
        <li>
          <%= m %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @book do |f| %>
<div>
  <p>
    <%= f.label :title, "Title"%>
    <%= f.text_field :title%>
  </p>

  <p>
    <%= f.label :description%>
    <%= f.text_field :description%>
  </p>

  <p>
    <%= f.label :price%>
    <%= f.number_field :price%>
  </p>

  <p>
    <%= f.label :category%>
    <%= f.select :category, Book.categories %>
  </p>

  <p>
    <%= f.submit "Update", class:"btn btn-default btn-lg" %>
    <%= link_to "Cancel", book_autor_path(current_autor.id), class:"btn btn-default btn-lg" %>
  </p>
</div>
<% end %>
